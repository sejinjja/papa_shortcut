      "target": "https://www.naver.com",
      "icon": "assets/icons/web.svg",
      "keywords": [
        "웹",
        "포털"
      ]
    },
    {
      "id": "steam",
      "name": "스팀",
      "categoryId": "game",
      "target": "C:/Program Files (x86)/Steam/Steam.exe",
      "icon": "assets/icons/game.svg",
      "keywords": [
        "스팀",
        "게임"
      ]
    }
  ]
